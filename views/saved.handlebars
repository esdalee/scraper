<!--Saved Articles-->

<div class="container">
<div class="row justify-content-center">
    <div class="col-md-12 jumbotron text-center">
        <div class="text-center">
            <h1>All Saved Articles</h1>
        </div>
    </div>
</div>
<div class="row text-align">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <ul class="articles">
            {{#if article}}
                {{#each article}}
                <li>
                    <div class="card">
                        <div class="row">
                            <div class="col-md-12">
                                <a href={{this.url}} target="_blank"></a>
                                <div class="card-body">
                                    <h5 class="card-title">{{this.headline}}</h5>
                                    <p class="card-text">{{this.summary}}</p>
                                    <br><br>
                                    <button type="button" class="btn btn-success" id="addNote" data-id={{this._id}}>Add Note</button>
                                    <button type="button" class="btn btn-danger" id="deleteBtn" data-id={{this._id}}>Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                {{/each}}
            {{else}}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4>None available</h4>
                    </div>
                </div>
            {{/if}}
        </ul>
    </div>
</div>
</div>